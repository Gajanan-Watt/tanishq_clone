function purity() {

    let arr = data.sort((a, b) => (a.purity > b.purity ? 1 : -1));

showProducts(arr);

}



function product() {

let arr = data.sort((a, b) => (a.product > b.product ? 1 : -1));

showProducts(arr);

}


function type() {

let arr = data.sort((a, b) => (a.jewelleryType > b.jewelleryType ? 1 : -1));

showProducts(arr);

}

function Occasion() {

let arr = data.sort((a, b) => (a.occasion > b.occasion ? 1 : -1));

showProducts(arr);

}



function showmore() {

let arr = data.sort((a, b) => (a.name > b.name ? 1 : -1));

showProducts(arr);

}

function view (sirf) {
  sirf = JSON.parse(sirf);
  window.location.href = `http://127.0.0.1:2424/single/${sirf}`
}


